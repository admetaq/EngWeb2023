extends layout 

block content 
  .w3-card-4
    header.w3-container.w3-red
      center
        h1 Users
    center
      #myBar.w3-bar.w3-border.w3-black
        a.w3-bar-item.w3-button.w3-hover-white(href="/") Tasks
        a.w3-bar-item.w3-button.w3-hover-white(href="/users") Users
    table.w3-table-all
      tr
        form.w3-container(method="POST" action="http://localhost:7777/users")
          fieldset
            legend Insertion Form
            label(for="name") Name
            input.w3-input.w3-round(type="text" name="name")
          button.w3-btn.w3-red.w3-mb-2(type="submit") Insert
      tr
        .w3-container
          table.w3-table-all
            tr
              th Id
              th Name
            each item in users
              tr
                td= item.id
                td= item.name
    footer.w3-container.w3-red
      center
        h5 Generated in EngWeb2023 #{d}

